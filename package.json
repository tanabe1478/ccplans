{
  "name": "ccplans",
  "version": "0.1.0",
  "private": true,
  "description": "Claude Plans Manager - Native Electron app for managing ~/.claude/plans/",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @ccplans/electron dev",
    "build": "pnpm --filter @ccplans/electron build",
    "test": "pnpm --filter @ccplans/shared test && pnpm --filter @ccplans/electron test",
    "test:e2e": "pnpm --filter @ccplans/electron test:e2e",
    "lint": "pnpm --filter @ccplans/shared typecheck && pnpm --filter @ccplans/electron lint",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "format": "biome format . --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^20.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": "biome check --write --no-errors-on-unmatched"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
