{
  "name": "@ccplans/electron",
  "version": "0.2.0",
  "private": true,
  "description": "ccplans Electron desktop app",
  "author": "tanabe1478",
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "dist:mac": "pnpm build && electron-builder --mac dmg --arm64 --publish never",
    "preview": "electron-vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "pnpm build && playwright test -c playwright.config.ts",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@ccplans/shared": "workspace:*",
    "@tanstack/react-query": "^5.59.0",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.320.0",
    "open": "^10.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^9.0.0",
    "react-router-dom": "^6.28.0",
    "rehype-highlight": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "zod": "^3.22.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.3.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.18",
    "clsx": "^2.1.1",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^2.0.0",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.35",
    "tailwind-merge": "^2.6.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.0",
    "vite": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "build": {
    "appId": "com.tanabe1478.ccplans",
    "productName": "ccplans",
    "npmRebuild": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "artifactName": "ccplans-${version}-mac-${arch}.${ext}"
    }
  }
}
