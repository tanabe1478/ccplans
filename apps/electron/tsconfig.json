{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": false,
    "noImplicitAny": false,
    "paths": {
      "@ccplans/shared": ["../../packages/shared/src/index.ts"],
      "@ccplans/shared/ports": ["../../packages/shared/src/ports.ts"],
      "@renderer/*": ["./src/renderer/*"],
      "@/*": ["./src/renderer/*"]
    }
  },
  "include": ["src/**/*", "../../packages/shared/src/**/*"],
  "exclude": ["src/__tests__/**/*", "src/**/__tests__/**/*"]
}
