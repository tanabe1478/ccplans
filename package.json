{
  "name": "ccplans",
  "version": "0.1.0",
  "private": true,
  "description": "Claude Plans Manager - Web-based tool for managing ~/.claude/plans/",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "test:e2e": "pnpm --filter e2e run test",
    "lint": "pnpm -r run lint",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "format": "biome format . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
